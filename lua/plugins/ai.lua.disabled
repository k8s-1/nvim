return {
  "yetone/avante.nvim",
  event = "VeryLazy",
  lazy = false,
  version = false, -- set this if you want to always pull the latest change
  opts = {
    -- add any opts here
  },
  provider = "gemini",
  behaviour = {
    auto_suggestions = false, -- Experimental stage
  },
  -- if you want to build from source then do `make BUILD_FROM_SOURCE=true`
  build = "make",
  dependencies = {
    "stevearc/dressing.nvim",
    "nvim-lua/plenary.nvim",
    "MunifTanjim/nui.nvim",
    {
      -- Make sure to set this up properly if you have lazy=true
      'MeanderingProgrammer/render-markdown.nvim',
      opts = {
        file_types = { "markdown", "Avante" },
      },
      ft = { "markdown", "Avante" },
    },
  },

  -- Custom hack to force gemini to load instead of claude
  -- 2024-09-13
  -- may not be necessary in future if avante devs fix this
  init = function()
    vim.api.nvim_create_autocmd("VimEnter", {
      callback = function()
        -- Ensure Avante.nvim has been loaded before switching providers
        if vim.fn.exists(":AvanteSwitchProvider") == 2 then
          vim.cmd("AvanteSwitchProvider gemini")
        end
      end,
    })
  end,
}
